<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:util="http://www.springframework.org/schema/util" xmlns="http://www.springframework.org/schema/beans"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
                           http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-3.0.xsd">


    <bean class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
        <property name="location" value="automation-credentials.properties" />
    </bean>

    <util:map id="homeMetaTestData" map-class="java.util.HashMap" key-type="java.lang.String" value-type="java.lang.Object"
              scope="prototype">
        <entry key="content" value="true"/>
    </util:map>

    <bean id="randomShortString" class="org.mule.modules.tests.ConnectorTestUtils"
          factory-method="generateRandomShortString" scope="prototype"/>

    <util:map id="createDirTestData" map-class="java.util.HashMap" key-type="java.lang.String" value-type="java.lang.Object"
              scope="prototype">
        <entry key="dirName" value-ref="randomShortString"/>
        <entry key="target" value=""/>
        <entry key="resolve" value="true"/>
        <entry key="content" value="true"/>
    </util:map>

    <util:map id="copyFilesTestData" map-class="java.util.HashMap" key-type="java.lang.String" value-type="java.lang.Object"
              scope="prototype">
        <entry key="ids" value="" />
        <entry key="target" value="" />
        <entry key="resolve" value="true" />
    </util:map>

    <util:map id="uploadFileTestData" map-class="java.util.HashMap" key-type="java.lang.String" value-type="java.lang.Object"
              scope="prototype">
        <entry key="filePath" value="" />
        <entry key="parentId" value="" />
        <entry key="fileName" value-ref="randomShortString" />
        <entry key="resolveConflict" value="true" />
    </util:map>

    <util:map id="renameFileTestData" map-class="java.util.HashMap" key-type="java.lang.String" value-type="java.lang.Object"
              scope="prototype">
        <entry key="uuid" value=""/>
        <entry key="newFileName" value="bbbbbbb"/>
        <entry key="resolve" value="true"/>
    </util:map>

    <util:map id="deleteFilesTestData" map-class="java.util.HashMap" key-type="java.lang.String" value-type="java.lang.Object"
              scope="prototype">
        <entry key="ids" value=""/>
    </util:map>

    <util:map id="downloadFileTestData" map-class="java.util.HashMap" key-type="java.lang.String" value-type="java.lang.Object"
              scope="prototype">
        <entry key="fileIds" value=""/>
    </util:map>

</beans>